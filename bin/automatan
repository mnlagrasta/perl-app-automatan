#!/usr/bin/perl

# PODNAME: automatan

# ABSTRACT: shell script wrapper for App::Automatan

use strict;
use warnings;

use App::Automatan;
use Getopt::Std;
use File::HomeDir;
use File::Spec::Functions;
use Data::Dumper;


my $opts = {};
getopts('vtc:', $opts);

# find config
my $conf_file;
if ($opts->{c}) {
    $conf_file = $opts->{c};
} else {
	$conf_file = catfile( File::HomeDir->my_home, '.automatan' );
}

my $a = App::Automatan->new(conf_file => $conf_file, debug => $opts->{v});
$a->check_sources();
$a->apply_filters();
$a->dedupe();
$a->do_actions();
